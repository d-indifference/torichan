<%- include('components/head-admin', { paramPageTitle: LOCALE.views.admin.listUser.staffList }) %>
<body>
    <%- include('fragments/admin-navbar') %>

    <h1 class="tori-page-title"><%= LOCALE.views.admin.listUser.staffList %> - <%= LOCALE.views.constants.managementPanel %></h1>
    <%- include('fragments/admin-welcome') %>

    <%- include('fragments/admin-tabs') %>

    <table border="1" class="table-list">
        <thead>
        <tr>
            <td>#</td>
            <td><%= LOCALE.views.admin.listUser.username %></td>
            <td><%= LOCALE.views.admin.listUser.email %></td>
            <td><%= LOCALE.views.admin.listUser.role %></td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        <% users.forEach((user, idx) => { %>
            <tr>
                <td><%= idx + 1 %></td>
                <td><%= user.username %></td>
                <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                <td><b><%= user.role %></b></td>
                <td>[<a href="/admin/staff/<%= user.id %>"><%= LOCALE.views.constants.edit %></a>]</td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <div class="simple-table-pagination">
        <span>
            <% if (currentPage > 0) { %>
                <a href="/admin/staff?page=<%= currentPage - 1 %>">&laquo;</a>
            <% } else { %>
                &laquo;
            <% } %>
        </span>
        &nbsp;
        <span>
            <% if (currentPage < maxPage) { %>
                <a href="/admin/staff?page=<%= currentPage + 1 %>">&raquo;</a>
            <% } else { %>
                &raquo;
            <% } %>
        </span><br>
        [<a href="/admin/staff/new"><%= LOCALE.views.admin.listUser.newStaffMember %></a>]<br>
    </div>

    <%- include('fragments/admin-navbar') %>

    <script type="text/javascript" src="/js/admin.js"></script>

    <%- include('fragments/tori-footer'); %>
</body>