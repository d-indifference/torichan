<script src="/js/jquery-1.4.min.js" type="text/javascript"></script>
<script src="/js/torichan.js" type="text/javascript"></script>
<script>
  var styleCookie = 'torichan_style';
  var nameCookie = 'torichan_name'
</script>
<script>
  window.onload = function() {
    setStyle(styleCookie);
    setNameFromCookies(nameCookie, 'posting_form');

    var match;

    if (match=/#i([0-9]+)/.exec(document.location.toString())) {
      if (!document.forms.posting_form.comment.value) {
        insert('posting_form', '>>' + match[1]);
      }
    }

    if(match=/#([0-9]+)/.exec(document.location.toString())) {
      highlightPost(match[1]);
    }
  }
</script>